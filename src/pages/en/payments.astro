<style>
  .page-hero {
    background: linear-gradient(135deg, #0a0a0f 0%, #1a1a2e 50%, #0a0a0f 100%);
    color: var(--text-primary);
    padding: 4rem 2rem;
    text-align: center;
    border-bottom: 3px solid var(--gold);
    box-shadow: 0 5px 30px rgba(212, 175, 55, 0.2);
  }

  .page-hero h1 {
    color: var(--text-primary);
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
  }

  .hero-subtitle {
    font-size: 1.2rem;
    line-height: 1.6;
    max-width: 900px;
    margin: 0 auto;
    opacity: 0.95;
    color: var(--text-secondary);
  }

  .content-section {
    padding: 3rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .content-section h2 {
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    font-size: 2rem;
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 0 15px rgba(212, 175, 55, 0.3));
  }

  .content-section h3 {
    color: var(--text-primary);
    margin: 2rem 0 1rem;
    font-size: 1.5rem;
  }

  .content-section h3::first-letter {
    color: var(--gold);
  }

  .content-section p {
    line-height: 1.8;
    margin-bottom: 1rem;
    color: var(--text-secondary);
  }

  .content-section ul {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .content-section li {
    line-height: 1.8;
    margin-bottom: 0.5rem;
    color: var(--text-secondary);
  }

  .content-section strong {
    color: var(--gold);
  }

  .table-container {
    background: var(--bg-card);
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--card-shadow);
    overflow-x: auto;
    margin: 2rem 0;
    border: 1px solid rgba(212, 175, 55, 0.2);
  }

  .table-container table {
    width: 100%;
    border-collapse: collapse;
  }

  .table-container th {
    background: var(--accent-gradient);
    color: #1a1a1a;
    padding: 1rem;
    text-align: left;
    font-weight: 700;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
    box-shadow: 0 2px 10px rgba(212, 175, 55, 0.3);
  }

  .table-container td {
    padding: 1rem;
    border-bottom: 1px solid rgba(212, 175, 55, 0.1);
    color: var(--text-primary);
  }

  .table-container tr:hover {
    background: rgba(212, 175, 55, 0.08);
    box-shadow: inset 0 0 15px rgba(212, 175, 55, 0.1);
  }

  .faq-item {
    background: var(--bg-card);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    box-shadow: var(--card-shadow);
    border: 1px solid rgba(212, 175, 55, 0.2);
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    box-shadow: var(--card-shadow-hover);
    border-color: var(--gold);
    transform: translateX(5px);
  }

  .faq-item h3 {
    color: var(--gold);
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
    text-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
  }

  .faq-item p {
    color: var(--text-secondary);
  }

  .cta-section {
    background: linear-gradient(135deg, #0a0a0f 0%, #1a1a2e 50%, #0a0a0f 100%);
    color: white;
    padding: 4rem 2rem;
    text-align: center;
    margin-top: 3rem;
    border-top: 3px solid var(--gold);
    box-shadow: 0 -5px 30px rgba(212, 175, 55, 0.2);
  }

  .cta-section h2 {
    color: white;
    margin-bottom: 1rem;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .cta-section p {
    color: var(--text-secondary);
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  .btn-primary {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: var(--accent-gradient);
    color: #1a1a1a;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 700;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: var(--gold-glow), 0 4px 15px rgba(0, 0, 0, 0.4);
    border: 1px solid var(--gold);
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: var(--gold-glow), 0 6px 25px rgba(212, 175, 55, 0.4), 0 4px 15px rgba(0, 0, 0, 0.5);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .page-hero h1 {
      font-size: 2rem;
    }

    .content-section {
      padding: 2rem 1rem;
    }

    .table-container {
      padding: 1rem;
    }

    .table-container table {
      font-size: 0.9rem;
    }

    .table-container th,
    .table-container td {
      padding: 0.75rem 0.5rem;
    }
  }
</style>

