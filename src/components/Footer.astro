<style>
  footer {
    background: linear-gradient(135deg, #050508 0%, #0a0a0f 50%, #050508 100%);
    color: #ffffff;
    padding: 3rem 2rem 1rem;
    margin-top: 4rem;
    border-top: 2px solid rgba(255, 0, 255, 0.3);
    box-shadow: 0 -5px 30px rgba(255, 0, 255, 0.2);
    position: relative;
    overflow: hidden;
  }

  footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #ff00ff, #00ffff, #ff00ff, transparent);
    box-shadow: 0 0 20px rgba(255, 0, 255, 0.8);
  }

  .footer-content {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3 {
    color: #ffffff;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    background: linear-gradient(135deg, #ff00ff 0%, #9d00ff 50%, #0066ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: drop-shadow(0 0 10px rgba(255, 0, 255, 0.8));
  }

  .footer-section h4 {
    color: #ffffff;
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .footer-section p {
    color: #b0b0b0;
    line-height: 1.6;
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: #00ffff;
    text-decoration: none;
    transition: all 0.3s ease;
    text-shadow: 0 0 5px rgba(0, 255, 255, 0.5);
  }

  .footer-section a:hover {
    color: #ff00ff;
    text-shadow: 0 0 15px rgba(255, 0, 255, 0.8);
  }

  .age-warning {
    font-weight: 700;
    color: #ff00ff !important;
    margin-bottom: 1rem !important;
    text-shadow: 0 0 10px rgba(255, 0, 255, 0.8), 0 0 20px rgba(255, 0, 255, 0.6);
    animation: warningPulse 2s ease-in-out infinite;
  }

  @keyframes warningPulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  .responsible-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .help-text {
    font-size: 0.9rem;
    margin-top: 1rem;
    color: #888;
  }

  .footer-bottom {
    max-width: 1400px;
    margin: 0 auto;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 0, 255, 0.2);
    text-align: center;
  }

  .footer-bottom p {
    color: #b0b0b0;
    margin-bottom: 0.5rem;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    color: #888;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    footer {
      padding: 2rem 1rem 1rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
