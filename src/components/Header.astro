---
import { CASINO_CONFIG } from '../consts';
---

<header>
  <nav>
    <div class="logo">
      <a href="/">
        <img src="https://res.cloudinary.com/dzwk5oovk/image/upload/v1764931760/Pandido-Casino-Review_uqtsoy.png" alt="Pandido Casino" />
      </a>
    </div>
    <div class="nav-links">
      <a href="/paiements">Paiements</a>
      <a href="/bonus">Bonus</a>
      <a href="/sports">Sports</a>
      <a href="/live-casino">Live Casino</a>
      <a href="/slots">Slots</a>
    </div>
    <div class="nav-actions">
      <a href={CASINO_CONFIG.affiliateLink} class="btn-primary" target="_blank">Jouer Maintenant</a>
      <a href={CASINO_CONFIG.affiliateLink} class="btn-secondary" target="_blank">Connexion</a>
    </div>
    <button class="mobile-menu-toggle" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </nav>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: rgba(10, 10, 15, 0.95);
    backdrop-filter: blur(20px);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.6), 0 0 20px rgba(212, 175, 55, 0.1);
    padding: 0;
    margin: 0;
    border-bottom: 2px solid rgba(212, 175, 55, 0.3);
  }

  nav {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    gap: 2rem;
    position: relative;
  }

  .logo a {
    display: inline-block;
    text-decoration: none;
  }

  .logo img {
    height: 50px;
    width: auto;
    max-width: 200px;
    object-fit: contain;
    filter: drop-shadow(0 2px 8px rgba(212, 175, 55, 0.4));
    transition: transform 0.3s ease, filter 0.3s ease;
  }

  .logo img:hover {
    transform: scale(1.05);
    filter: drop-shadow(0 2px 12px rgba(212, 175, 55, 0.6));
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-links a {
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    white-space: nowrap;
    position: relative;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #d4af37, #f4d03f);
    transition: width 0.3s ease;
    box-shadow: 0 0 8px rgba(212, 175, 55, 0.5);
  }

  .nav-links a:hover {
    color: #f4d03f;
    text-shadow: 0 0 8px rgba(212, 175, 55, 0.4);
  }

  .nav-links a:hover::after {
    width: 100%;
  }

  .nav-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .btn-primary,
  .btn-secondary {
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    white-space: nowrap;
    display: inline-block;
  }

  .btn-primary {
    background: linear-gradient(135deg, #d4af37 0%, #f4d03f 50%, #d4af37 100%);
    color: #1a1a1a;
    box-shadow: 0 0 15px rgba(212, 175, 55, 0.4), 0 4px 15px rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(212, 175, 55, 0.5);
    position: relative;
    overflow: hidden;
    font-weight: 700;
  }

  .btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .btn-primary:hover::before {
    left: 100%;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 20px rgba(212, 175, 55, 0.6), 0 6px 20px rgba(212, 175, 55, 0.4), 0 4px 15px rgba(0, 0, 0, 0.5);
  }

  .btn-secondary {
    background: transparent;
    color: #d4af37;
    border: 2px solid #d4af37;
    box-shadow: 0 0 10px rgba(212, 175, 55, 0.2);
  }

  .btn-secondary:hover {
    background: rgba(212, 175, 55, 0.1);
    color: #f4d03f;
    box-shadow: 0 0 15px rgba(212, 175, 55, 0.4);
    transform: translateY(-2px);
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    gap: 4px;
  }

  .mobile-menu-toggle span {
    width: 25px;
    height: 3px;
    background: #d4af37;
    border-radius: 2px;
    transition: all 0.3s ease;
    box-shadow: 0 0 8px rgba(212, 175, 55, 0.5);
  }

  @media (max-width: 968px) {
    nav {
      padding: 1rem;
    }

    .nav-links {
      display: none;
    }

    .nav-actions {
      gap: 0.5rem;
    }

    .btn-primary,
    .btn-secondary {
      padding: 0.6rem 1rem;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 640px) {
    .nav-actions {
      display: none;
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .nav-links.mobile-open,
    .nav-actions.mobile-open {
      display: flex;
      flex-direction: column;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: rgba(10, 10, 15, 0.98);
      backdrop-filter: blur(20px);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.6), 0 0 30px rgba(212, 175, 55, 0.2);
      padding: 1rem;
      gap: 1rem;
      border-top: 2px solid rgba(212, 175, 55, 0.3);
    }

    .nav-links.mobile-open {
      border-bottom: 1px solid rgba(212, 175, 55, 0.2);
    }

    .nav-links.mobile-open a {
      padding: 0.75rem;
      border-bottom: none;
    }

    .nav-actions.mobile-open {
      border-top: 1px solid rgba(212, 175, 55, 0.2);
    }

    .nav-actions.mobile-open .btn-primary,
    .nav-actions.mobile-open .btn-secondary {
      width: 100%;
      text-align: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.querySelector('.mobile-menu-toggle');
    const navLinks = document.querySelector('.nav-links');
    const navActions = document.querySelector('.nav-actions');
    
    if (toggle) {
      toggle.addEventListener('click', () => {
        navLinks?.classList.toggle('mobile-open');
        navActions?.classList.toggle('mobile-open');
      });
    }
  });
</script>
