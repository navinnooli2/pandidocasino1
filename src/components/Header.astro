const currentLang = Astro.props.currentLang || 'fr';
const basePath = currentLang === 'en' ? '/en' : '';
const isEnglish = currentLang === 'en';
---

<header>
  <nav>
    <div class="logo">
      <a href={basePath || '/'}>
        <img src="https://res.cloudinary.com/dzwk5oovk/image/upload/v1764931760/Pandido-Casino-Review_uqtsoy.png" alt="Pandido Casino" />
      </a>
    </div>
    <div class="nav-links">
      <a href={isEnglish ? `${basePath}/payments` : `${basePath}/paiements`}>{isEnglish ? 'Payments' : 'Paiements'}</a>
      <a href={`${basePath}/bonus`}>Bonus</a>
      <a href={`${basePath}/sports`}>Sports</a>
